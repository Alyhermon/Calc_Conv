<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CalConvert"
    tools:ignore="ExtraText">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bienvenido/a: "
        android:textSize="30dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="5dp" />

    <TextView
        android:id="@+id/tvnombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Escriba el valor"
        android:layout_marginLeft="10dp"
        android:textSize="30dp"

        />

    <TextView
        android:id="@+id/tvvalor"
        android:layout_width="450dp"
        android:layout_height="50dp"
        android:layout_marginLeft="-390dp"
        android:layout_marginTop="200dp"
        android:textColor="@color/white"
        android:background="@color/black"
        android:text="0"
        android:textSize="30dp"
        android:hint="Escriba el valor"
        />



    /*Boton De limpiar el TextView*/

    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginLeft="-390dp"
        android:layout_marginTop="300dp"
        android:backgroundTint="#4ad"

        android:text="CLEAR" />

    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="300dp"
        android:backgroundTint="#4ad356"
        android:text="EUR" />

    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="300dp"
        android:backgroundTint="#4ad356"
        android:text="US" />

    /*Lista de los botones Numericos*/

    <Button
        android:id="@+id/num7"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="350dp"
        android:layout_marginLeft="-320dp"
        android:onClick="numero7"
        android:text="7" />

    <Button
        android:id="@+id/num4"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="400dp"
        android:layout_marginLeft="-100dp"
        android:onClick="numero4"
        android:text="4" />

    <Button
        android:id="@+id/num1"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="450dp"
        android:layout_marginLeft="-100dp"
        android:onClick="numero1"
        android:text="1" />

    <Button
        android:id="@+id/num0"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_marginTop="500dp"
        android:layout_marginLeft="-100dp"
        android:onClick="numero0"
        android:text="0" />

    <Button
        android:id="@+id/num8"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="350dp"
        android:layout_marginLeft="-210dp"
        android:onClick="numero8"
        android:text="8" />

    <Button
        android:id="@+id/num5"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="400dp"
        android:layout_marginLeft="-100dp"
        android:onClick="numero5"
        android:text="5" />

    <Button
        android:id="@+id/num2"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="450dp"
        android:layout_marginLeft="-100dp"
        android:onClick="numero2"
        android:text="2" />

    <Button
        android:id="@+id/num9"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="350dp"
        android:layout_marginLeft="10dp"
        android:onClick="numero9"
        android:text="9" />

    <Button
        android:id="@+id/num6"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="400dp"
        android:layout_marginLeft="-100dp"
        android:onClick="numero6"
        android:text="6" />

    <Button
        android:id="@+id/num3"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="450dp"
        android:layout_marginLeft="-100dp"
        android:onClick="numero3"
        android:text="3" />


</LinearLayout>